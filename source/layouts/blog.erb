<% wrap_layout :layout do %>
  <div class="container">
    <div class='row'>
      <div class='col s12'>
        <header>
          <h3><%= current_article.title %></h3>
          <time><%= current_article.date.strftime('%b %e %Y') %></time>
        </header>
        <article>
          <%= yield %>
        </article>
      </div>
    </div>
  </div>
<% end %>
